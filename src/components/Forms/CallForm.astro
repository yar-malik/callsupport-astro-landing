---
import MakeCall from "../../pages/api/makeCall";
---

<section class="flex flex-col items-center">
  <div
    class="flex flex-col md:flex-row items-center justify-center bg-gray-900 text-white rounded-lg overflow-hidden shadow-lg w-full max-w-4xl"
  >
    <!-- Left Side - Form -->
    <div class="w-full md:w-1/2 p-6 sm:p-10">
      <h1
        class="text-xl sm:text-2xl font-bold text-blue-400 mb-6 text-center md:text-left"
      >
        Receive a live call from our agent
      </h1>
      <form
        id="callForm"
        action="https://api.vapi.ai/call/phone"
        method="POST"
        class="space-y-4"
      >
        <!-- Phone Number -->
        <div>
          <label for="phone" class="block text-sm font-medium"
            >Phone Number</label
          >
          <input
            type="text"
            id="phone"
            name="phone"
            placeholder="1-123-456-7890"
            class="mt-1 block w-full rounded-md border-gray-300 text-black shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-300"
            required
          />
        </div>
        <!-- Name -->
        <div>
          <label for="name" class="block text-sm font-medium">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="John"
            class="mt-1 block w-full rounded-md border-gray-300 text-black shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-300"
            required
          />
        </div>
        <!-- Email -->
        <div>
          <label for="email" class="block text-sm font-medium"
            >Email Address</label
          >
          <input
            type="email"
            id="email"
            name="email"
            placeholder="john@company.com"
            class="mt-1 block w-full rounded-md border-gray-300 text-black shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-300"
            required
          />
        </div>
        <!-- Language -->
        <div>
          <label for="language" class="block text-sm font-medium"
            >Language</label
          >
          <select
            id="language"
            name="language"
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm text-black bg-white focus:border-blue-500 focus:ring focus:ring-blue-300"
            required
          >
            <option value="english">ðŸ‡¬ðŸ‡§ English</option>
            <option value="german">ðŸ‡©ðŸ‡ª German</option>
          </select>
        </div>
        <!-- Submit Button -->
        <div>
          <button
            type="submit"
            class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors"
          >
            GET A CALL
          </button>
        </div>
      </form>
    </div>

    <!-- Right Side - Image -->
    <div class="w-full md:w-1/2">
      <img
        src="https://cdn.prod.website-files.com/64ada0f2685b2d18caa5e699/66d575f6156ebfcfe343fa7d_Firefly%20dental%20receptionist%20is%20picking%20up%20phone%2C%20background%20is%20clinic%20front%20desk%2076720.jpg"
        alt="Agent on phone"
        class="w-full h-60 sm:h-80 md:h-full object-cover"
      />
    </div>
  </div>
</section>

<script>
  // Ensure the API key is loaded correctly
  const API_KEY = import.meta.env.PUBLIC_VAPI_PIVATE_KEY;
  const PHONE_KEY = import.meta.env.PUBLIC_VAPI_PHONE_KEY;
  console.log("Phone_KEY", PHONE_KEY);
  console.log("API_KEY", API_KEY);

  document
    .getElementById("callForm")
    .addEventListener("submit", async (event) => {
      event.preventDefault(); // Prevent default form submission

      // Collect form data
      const form = event.target;
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries()); 

      const { phone, language } = data; 
      const sanitizedPhone = phone.replace(/\D/g, ""); 
      console.log("sanitizedPhone", sanitizedPhone);
      // Ensure required fields
      if (!sanitizedPhone || !language) {
        alert("Phone number and language are required!");
        return;
      }

      // Define language configurations
      const languageConfig = {
        german: {
          apiEndpoint:
            "https://vapi.ai?demo=true&shareKey=d164f8de-d636-448f-b060-714352684dc2&assistantId=e3f46952-31ff-4d0f-a08b-64186b78f468",
          phoneNumberId: "d164f8de-d636-448f-b060-714352684dc2",
        },
        english: {
          apiEndpoint:
            "https://vapi.ai?demo=true&shareKey=d164f8de-d636-448f-b060-714352684dc2&assistantId=00d6a328-d20a-4e35-bbff-819f8a515d70",
          phoneNumberId: "d164f8de-d636-448f-b060-714352684dc2",
        },
      };

      // Get the configuration for the selected language
      const config = languageConfig[language.toLowerCase()];
      if (!config) {
        alert("Unsupported language selected!");
        return;
      }

      // Prepare payload for VAPI API
      const payload = {
        phoneNumberId: PHONE_KEY,
        assistantId: config.apiEndpoint.split("&assistantId=")[1],
        customer: {
          number: `+${sanitizedPhone}`,
        },
      };

      // Set headers for the API request
      const headers = {
        Authorization: API_KEY,
        "Content-Type": "application/json",
      };

      const submitButton = form.querySelector("button[type='submit']");
      const defaultButtonText = submitButton.textContent;

      try {
        // Indicate sending state
        submitButton.textContent = "Sending...";
        submitButton.disabled = true;

        // Send API request
        const response = await fetch(form.action, {
          method: "POST",
          headers: headers,
          body: JSON.stringify(payload),
        });

        if (response.ok) {
          const result = await response.json();
          submitButton.textContent = "Call Created Successfully!";
          setTimeout(() => {
            submitButton.textContent = "Thanks!";
            setTimeout(() => {
              submitButton.textContent = defaultButtonText;
              submitButton.disabled = false;
              form.reset();
            }, 2000);
          }, 1000);


        } else {
          const error = await response.json();
          alert(`Error: ${error.message || "Failed to create the call."}`);

          // Reset the button state to allow retry
          submitButton.textContent = "GET A CALL";
          submitButton.disabled = false;
        }
      } catch (error) {
        console.error("Submission Error:", error);
        alert("An error occurred. Please try again.");
      } finally {
        // Reset button state
        // submitButton.textContent = defaultButtonText;
        submitButton.disabled = false;
      }
    });
</script>
