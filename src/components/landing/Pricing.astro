<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Buttons
    const monthlyButton = document.getElementById("monthly-button");
    const annualButton = document.getElementById("annual-button");

    // Plan Containers
    const monthlyPlan = document.getElementById("monthly-plan");
    const annualPlan = document.getElementById("annual-plan");

    // Default state is 'monthly'
    let isAnnual = false;

    // Function to update the view based on the state
    const updateView = () => {
      if (isAnnual) {
        // Show Annual Plan, Hide Monthly Plan
        monthlyPlan.style.display = "none";
        annualPlan.style.display = "block";

        // Update button styles
        monthlyButton.className =
          "px-6 py-3 text-sm font-display rounded-lg bg-[#F9FAFB]  border-2 border-gray-300   text-black";
        annualButton.className =
          "px-6 py-3 ml-4 text-sm font-display rounded-lg bg-black   text-white";
      } else {
        // Show Monthly Plan, Hide Annual Plan
        monthlyPlan.style.display = "block";
        annualPlan.style.display = "none";

        // Update button styles
        monthlyButton.className =
          "px-6 py-3 text-sm font-display rounded-lg bg-black text-white";
        annualButton.className =
          "px-6 py-3 ml-4 text-sm font-display rounded-lg bg-[#F9FAFB] border-2 border-gray-300 text-black";
      }
    };

    // Event listeners for buttons
    monthlyButton.addEventListener("click", () => {
      isAnnual = false;
      updateView();
    });

    annualButton.addEventListener("click", () => {
      isAnnual = true;
      updateView();
    });

    // Initialize the view
    updateView();
  });
</script>
