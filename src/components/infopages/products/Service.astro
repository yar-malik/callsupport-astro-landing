      </div>
    </div>
  </section>

  <!-- Integration Section -->
  <div class="bg-white py-16 px-4">
    <div class="max-w-5xl mx-auto text-center">
      <h2 class="text-3xl font-extrabold text-dark mb-8">
        AI Solutions for Finance
      </h2>
    </div>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-7xl mx-auto"
    >
      <!-- Card 1 -->
      <div class="bg-gray-50 rounded-lg p-6 text-center">
        <div class="mb-4">
          <img
            src="/images/Industry/ecommerce.svg"
            alt="CallSupport Ai AI Icon"
            class="h-30 w-30 mx-auto"
          />
        </div>
        <h3 class="text-black font-bold text-lg">
          CallSupport AI For Ecommerce
        </h3>
      </div>

      <!-- Card 2 -->
      <div class="bg-gray-50 rounded-lg p-6 text-center">
        <div class="mb-4">
          <img
            src="/images/Industry/Group-62.svg"
            alt="Software Development Icon"
            class="h-30 w-30 mx-auto"
          />
        </div>
        <h3 class="text-black font-bold text-lg">
          CallSupport AI For RealState
        </h3>
      </div>

      <!-- Card 3 -->
      <div class="bg-gray-50 rounded-lg p-6 text-center">
        <div class="mb-4">
          <img
            src="/images/Industry/Group-3014.svg"
            alt="Banking Icon"
            class="h-30 w-30 mx-auto"
          />
        </div>
        <h3 class="text-black font-bold text-lg">
          CallSupport AI For Recrutiment
        </h3>
      </div>

      <!-- Card 4 -->
      <div class="bg-gray-50 rounded-lg p-6 text-center">
        <div class="mb-4">
          <img
            src="/images/Industry/Healthcare.svg"
