      <!-- Progress Bar -->
      <div class="flex-1">
        <div class="relative">
          <div class="bg-gray-700 h-2 rounded-full overflow-hidden">
            <div id="progressBar" class="bg-accent-500 h-full w-0"></div>
          </div>
