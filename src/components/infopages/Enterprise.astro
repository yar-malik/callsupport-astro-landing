    </div>

    <!-- Right Section -->
    <div class="rounded-3xl bg-gray-50 p-8  shadow-md">
      <form class="space-y-4">
        <!-- First Name & Last Name -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm text-gray-700 mb-2" for="first-name">
              First name
            </label>
            <input
              type="text"
              id="first-name"
              class="w-full bg-white border border-gray-300 rounded-lg px-4 py-2 text-gray-900 focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="Enter first name"
            />
          </div>
          <div>
            <label class="block text-sm text-gray-700 mb-2" for="last-name">
              Last name
            </label>
            <input
              type="text"
              id="last-name"
              class="w-full bg-white border border-gray-300 rounded-lg px-4 py-2 text-gray-900 focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="Enter last name"
            />
          </div>
        </div>

        <!-- Work Email -->
        <div>
          <label class="block text-sm text-gray-700 mb-2" for="work-email">
            Work Email
          </label>
          <input
            type="email"
            id="work-email"
            class="w-full bg-white border border-gray-300 rounded-lg px-4 py-2 text-gray-900 focus:ring-indigo-500 focus:border-indigo-500"
            placeholder="Enter work email"
          />
        </div>

        <!-- Calls per Month -->
        <div>
          <label class="block text-sm text-gray-700 mb-2" for="calls">
            How many calls do you expect to make per month?
          </label>
          <select
            id="calls"
            class="w-full bg-white border border-gray-300 rounded-lg px-4 py-2 text-gray-900 focus:ring-indigo-500 focus:border-indigo-500"
          >
            <option value="">Select</option>
            <option value="1-100">1-100</option>
            <option value="101-500">101-500</option>
            <option value="501-1000">501-1000</option>
            <option value="1001+">1001+</option>
          </select>
        </div>

        <!-- Use Case -->
        <div>
          <label class="block text-sm text-gray-700 mb-2" for="use-case">
            Your use case?
          </label>
          <textarea
            id="use-case"
            rows="3"
            class="w-full bg-white border border-gray-300 rounded-lg px-4 py-2 text-gray-900 focus:ring-black focus:border-black"
            placeholder="Describe your use case"></textarea>
        </div>

        <!-- How did you find us? -->
        <div>
          <label class="block text-sm text-gray-700 mb-2" for="find-us">
            How did you find us?
          </label>
          <select
            id="find-us"
            class="w-full bg-white border border-gray-300 rounded-lg px-4 py-2 text-gray-900 focus:ring-black focus:border-black"
          >
            <option value="">Select</option>
            <option value="google">Google</option>
            <option value="social-media">Social Media</option>
            <option value="referral">Referral</option>
            <option value="other">Other</option>
          </select>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-black text-white py-2 rounded-lg cursor-pointer transition"
        >
          Send message
        </button>
      </form>
    </div>
  </div>
</section>
